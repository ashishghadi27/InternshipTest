<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/container"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#E5E3E4"
  tools:context=".MainActivity">



  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

      <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/picture"/>

      <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:cardCornerRadius="5dp">

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical">

          <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
              android:layout_width="60dp"
              android:layout_height="60dp"
              android:layout_margin="15dp"
              android:id="@+id/gift"
              android:src="@drawable/ic_gift"/>

            <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_toEndOf="@+id/gift"
              android:layout_alignParentBottom="true"
              android:layout_alignParentEnd="true"
              android:paddingBottom="15dp"
              >

              <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/info"
                android:id="@+id/info"
                android:textSize="16sp"
                android:textStyle="bold"
                />

              <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 26 Jan 2019"
                android:layout_toRightOf="@+id/info"
                android:textSize="16sp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                />

              <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/info2"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_below="@+id/info"
                />


            </RelativeLayout>


          </RelativeLayout>


          <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="UPGRADE NOW"
            android:background="@drawable/round"
            android:textColor="#fff"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="20dp"

            />



        </LinearLayout>



      </android.support.v7.widget.CardView>

      <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:cardCornerRadius="5dp"
        android:padding="10dp">

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical">

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:text="Subjects"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:textSize="20sp"
            />


          <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp">

            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="80dp"
              android:orientation="horizontal">

              <ImageView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_creative_idea"
                android:padding="10dp"
                android:background="#EDF7FF"
                android:scaleType="fitXY"/>

              <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Mental Ability"
                  android:layout_marginStart="15dp"
                  android:layout_marginTop="15dp"
                  android:layout_marginBottom="5sp"
                  android:textSize="18dp"
                  android:textStyle="bold"/>

                <RelativeLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  >

                  <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Progress"
                    android:layout_marginStart="15sp"
                    android:layout_centerVertical="true"
                    android:id="@+id/progresstext"
                    android:textSize="14sp"/>

                  <ProgressBar
                    android:layout_width="match_parent"
                    android:layout_height="7dp"
                    android:layout_marginEnd="50dp"
                    android:layout_toEndOf="@+id/progresstext"
                    android:layout_marginStart="10dp"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:progressDrawable="@drawable/pregressbar"
                    android:layout_centerVertical="true"
                    />

                  <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 %"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="15dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"/>

                </RelativeLayout>

              </LinearLayout>


            </LinearLayout>

          </android.support.v7.widget.CardView>

          <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp">

            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="80dp"
              android:orientation="horizontal">

              <ImageView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_magnet"
                android:padding="10dp"
                android:background="#EDF7FF"
                android:scaleType="fitXY"/>

              <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Physics"
                  android:layout_marginStart="15dp"
                  android:layout_marginTop="15dp"
                  android:layout_marginBottom="5sp"
                  android:textSize="18dp"
                  android:textStyle="bold"/>

                <RelativeLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  >

                  <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Progress"
                    android:layout_marginStart="15sp"
                    android:layout_centerVertical="true"
                    android:id="@+id/progresstext2"
                    android:textSize="14sp"/>

                  <ProgressBar
                    android:layout_width="match_parent"
                    android:layout_height="7dp"
                    android:layout_marginEnd="50dp"
                    android:layout_toEndOf="@+id/progresstext2"
                    android:layout_marginStart="10dp"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:progressDrawable="@drawable/pregressbar"
                    android:layout_centerVertical="true"
                    />

                  <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 %"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="15dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"/>

                </RelativeLayout>

              </LinearLayout>


            </LinearLayout>

          </android.support.v7.widget.CardView>

          <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp">

            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="80dp"
              android:orientation="horizontal">

              <ImageView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_flask"
                android:padding="10dp"
                android:background="#EDF7FF"
                android:scaleType="fitXY"/>

              <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Chemistry"
                  android:layout_marginStart="15dp"
                  android:layout_marginTop="15dp"
                  android:layout_marginBottom="5sp"
                  android:textSize="18dp"
                  android:textStyle="bold"/>

                <RelativeLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  >

                  <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Progress"
                    android:layout_marginStart="15sp"
                    android:layout_centerVertical="true"
                    android:id="@+id/progresstext3"
                    android:textSize="14sp"/>

                  <ProgressBar
                    android:layout_width="match_parent"
                    android:layout_height="7dp"
                    android:layout_marginEnd="60dp"
                    android:layout_toEndOf="@+id/progresstext3"
                    android:layout_marginStart="10dp"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:progressDrawable="@drawable/pregressbar"
                    android:layout_centerVertical="true"
                    />

                  <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.71 %"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="15dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"/>

                </RelativeLayout>

              </LinearLayout>


            </LinearLayout>

          </android.support.v7.widget.CardView>

          <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp">

            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="80dp"
              android:orientation="horizontal">

              <ImageView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_set_square"
                android:padding="10dp"
                android:background="#EDF7FF"
                android:scaleType="fitXY"/>

              <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Mathematics"
                  android:layout_marginStart="15dp"
                  android:layout_marginTop="15dp"
                  android:layout_marginBottom="5sp"
                  android:textSize="18dp"
                  android:textStyle="bold"/>

                <RelativeLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  >

                  <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Progress"
                    android:layout_marginStart="15sp"
                    android:layout_centerVertical="true"
                    android:id="@+id/progresstext4"
                    android:textSize="14sp"/>

                  <ProgressBar
                    android:layout_width="match_parent"
                    android:layout_height="7dp"
                    android:layout_marginEnd="50dp"
                    android:layout_toEndOf="@+id/progresstext4"
                    android:layout_marginStart="10dp"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:progressDrawable="@drawable/pregressbar"
                    android:layout_centerVertical="true"
                    />

                  <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 %"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="15dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"/>

                </RelativeLayout>

              </LinearLayout>


            </LinearLayout>

          </android.support.v7.widget.CardView>






        </LinearLayout>


      </android.support.v7.widget.CardView>

      <Space
        android:layout_width="match_parent"
        android:layout_height="70dp"/>

    </LinearLayout>




  </ScrollView>


  <android.support.design.widget.BottomNavigationView
    android:id="@+id/navigation"
    app:labelVisibilityMode="labeled"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="0dp"
    android:layout_marginEnd="0dp"
    android:background="?android:attr/windowBackground"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:itemIconTint="@drawable/selector"
    app:menu="@menu/navigation"/>

</android.support.constraint.ConstraintLayout>